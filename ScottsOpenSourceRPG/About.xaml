<Window x:Class="ScottsOpenSourceRPG.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="175" Width="350" ResizeMode="NoResize">

    <Grid Margin="0,0,4,4">
        <Label Content="Scott's Open Source RPG" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Version:" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top"/>
        <Label Content="Copyright 2015, Scott Lilly" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top"/>
        <Label HorizontalAlignment="Left" Margin="10,85,0,0" VerticalAlignment="Top">
            <Hyperlink NavigateUri="https://github.com/ScottLilly/ScottsOpenSourceRPG/blob/master/LICENSE" RequestNavigate="Hyperlink_License_RequestNavigate">Released under the MIT License</Hyperlink>
        </Label>
        <Button Content="Close" HorizontalAlignment="Left" Margin="255,112,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" RenderTransformOrigin="-0.2,-1.05"/>

    </Grid>
</Window>
